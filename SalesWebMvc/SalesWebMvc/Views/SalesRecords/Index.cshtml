
@{
    ViewData["Title"] = "Sales Records";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="SimpleSearch">
            <legend>Simple Search</legend>
            <div class="form-group">
                <label for="minDate">Min Date</label>
                <input type="date" class="form-control" id="minDate" name="minDate" >
            </div>
            <div class="form-group">
                <label for="maxDate">Max Date</label>
                <input type="date" class="form-control" id="maxDate" name="maxDate">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-action="GroupingSearch">
            <legend>Group Search</legend>
            <div class="form-group">
                <label for="minDate">Min Date</label>
                <input type="date" class="form-control" id="minDate" aria-describedby="minDate">
            </div>
            <div class="form-group">
                <label for="maxDate">Max Date</label>
                <input type="date" class="form-control" id="maxDate">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
